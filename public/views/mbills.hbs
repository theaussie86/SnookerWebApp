<!DOCTYPE html>

<html >
    {{> head}}
    <body>
    {{> header}}
        <div id="members">
            <div class="row my-5">
                <div class="col-md-2">
                    {{> sidebar}}
                </div>
                <div class="col-md-10 ">
                    <div class="jumbotron" id="members-caption">
                        {{> alerts}}                        
                        <div class="container">
                            <p>
                                <h5>Meine Rechnungen</h5>
                            </p>
                            <table id="billsTable" class="table table-border table-light table-hover">
                            <thead>
                                <tr>
                                <th>Abrechnungszeitraum</th>
                                <th>Gastumsatz</th>
                                <th>Beitrag</th>
                                </tr>
                            </thead>
                            <tbody id="myBills">
                            </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        <div class="modal fade" id="billModal" tabindex="-1" role="dialog" aria-labelledby="billModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="billModalLabel">Rechnung Oct 2017</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">

                    <div class="row">
                        <div id="umsatz" class="col-8">

                        </div>
                    </div>
                    <div class="row">
                        <div id="lblsumme" class="col-md-4">Summe:</div>
                        <div id="summe" class="col-md-4 ml-auto"></div>
                    </div>
                    <div class="row">
                        <div id="lblBeitrag" class="col-md-4">Beitrag:</div>
                        <div id="beitrag" class="col-md-4 ml-auto"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Schließen</button>
                <button type="button" class="btn btn-primary">Rechnung öffnen</button>
            </div>
            </div>
        </div>
        </div>
            {{> footer}}
        </div>


        <!-- Optional JavaScript -->
        
        {{> scripts}}
        <!-- Additional JavaScript -->
        <script type="text/javascript" src="js/bill.js"></script>
    </body>
</html>