<!DOCTYPE html>

<html >
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta http-equiv="x-ua-compatible" content="ie=edge"> 
        <link rel="icon" href="img/snookericon.ico" type="image/x-icon"/>
        <title>{{title}}</title>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="css/bootstrap.min.css">

        <!-- Custom CSS -->
        <link rel="stylesheet" href="css/snookerclub.css">
    </head>
    <body>
    {{> header}}
        <div id="members">
            <div class="row my-5">
                <div class="col-md-10 p-1">
                    <div class="jumbotron" id="members-caption">
                        {{> alerts}}                        
                        <div class="tab-content d-block" id="myTabContent">
                            <div class="tab-pane fade show active" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                                <h4>Ãœbersicht</h4> 
                                <div class="row d-flex justify-content-around">
                                    <div class="col-xs-6">
                                        <h6>Letzten Gastspieler</h6>
                                        <table class="table table-border">
                                        <thead>
                                            <tr>
                                            <th>Datum</th>
                                            <th>Spieler 1</th>
                                            <th>Spieler 2</th>
                                            <th>Spielzeit</th>
                                            </tr>
                                        </thead>
                                        <tbody id="latestVisitors">
                                        </tbody>
                                        </table>
                                    </div>
                                    <div class="col-xs-4">
                                        <h6>Einnahmen Gastspieler</h6>
                                        <ul id="Kennzahlen" class="list-unstyled">
                                            <li id="thisMonth">Umsatz Gastspieler diesen Monat: </li>
                                            <li id="lastMonth">Umsatz Gastspieler letzten Monat: </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="row d-flex justify-content-around">
                                    <div class="col-xs-5">
                                        <h6>Highest Breaks</h6>
                                        <table class="table table-border">
                                        <thead>
                                            <tr>
                                            <th>Rang</th>
                                            <th>Datum</th>
                                            <th>Spieler</th>
                                            <th>Break</th>
                                            </tr>
                                        </thead>
                                        <tbody id="highBreaks">
                                        </tbody>
                                        </table>
                                    </div>
                                    <div class="col-xs-5">
                                        <h6>Latest Breaks</h6>
                                        <table class="table table-border float-right">
                                        <thead>
                                            <tr>
                                            <th>Datum</th>
                                            <th>Spieler</th>
                                            <th>Break</th>
                                            </tr>
                                        </thead>
                                        <tbody id="latestBreaks">
                                        </tbody>
                                        </table>
                                    </div>
                                </div>                                
                            </div>
                            <div class="tab-pane fade" id="gastspieler" role="tabpanel" aria-labelledby="mitglieder-tab">Gastspieler</div>
                            <div class="tab-pane fade" id="breaks" role="tabpanel" aria-labelledby="rechnung-tab">Breaks</div>                       
                        </div>
                    </div>
                </div>
                <div class="col-md-2 p-1">
                    <div class="btn-group-vertical d-block" role="group" aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-secondary">1</button>
                        <button type="button" class="btn btn-secondary">2</button>                  
                    </div>
                </div>
            </div>
            {{> footer}}
        </div>


        <!-- Optional JavaScript -->

        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
        <script type="text/javascript" src="js/popper.js"></script><!--<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>-->
        <script type="text/javascript" src="js/bootstrap.min.js"></script>
        <script type="text/javascript" src="js/moment.min.js"></script>
        <script type="text/javascript" src="js/members.js"></script>
    </body>
</html>