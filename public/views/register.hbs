<!DOCTYPE html>

<html >
    {{> head}}
    <body>
    {{> header}}

    <div id="stage">
        <div class="container-fluid" id="stage-caption">
            <div id="formContainer" class="container-fluid p-2 rounded col-10 col-md-6">
                <form id="loginform" method="POST" action="/register"> 
                    <div class="form-group">
                        <h4>Neues Mitglied Registrieren</h4>
                        <hr>
                        {{> alerts}}
                        <label for="username" class="form-control-label float-left text-secondary">Benutzername:</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="Benutzername" autofocus>
                        <label for="email" class="form-control-label float-left text-secondary">Emailadresse:</label>
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email" >
                        <label for="password" class="form-control-label float-left text-secondary">Passwort:</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Passwort"></input>
                        <label for="password2" class="form-control-label float-left text-secondary">Passwort bestÃ¤tigen:</label>
                        <input type="password" class="form-control" name="password2" id="password2" placeholder="Passwort erneut eingeben"></input>
                        <hr>
                        <button type="submit" class="btn btn-success">Registrieren</button>
                    </div>
                </form> 
            </div>
        </div>
    </div>

    {{> footer}}
        <!-- Optional JavaScript -->
    {{> scripts}}
    </body>
</html>