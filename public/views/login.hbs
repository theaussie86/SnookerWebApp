<!DOCTYPE html>

<html >
    {{> head}}
    <body>
    {{> header}}

    <div id="stage">
        <div class="container-fluid" id="stage-caption">
            <div id="formContainer" class="container-fluid p-2 rounded col-10 col-md-6 col-lg-4">
                <form id="loginform" method="POST" action="/login"> 
                    <div class="form-group">
                        <h4>Login</h4>
                        <hr>
                        {{> alerts}}
                        <label for="username" class="form-control-label float-left text-secondary">Benutzername:</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="Benutzername" autofocus>
                        <label for="password" class="form-control-label float-left text-secondary">Passwort:</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Passwort"></input>
                        <a class="float-left font-italic" href="/forgot">Passwort vergessen?</a><br>
                        <hr>
                        <button type="submit" class="btn btn-success">Anmelden</button>
                    </div>
                </form> 
            </div>
        </div>
    </div>

    {{> footer}}
        <!-- Optional JavaScript -->
    {{> scripts}}
    </body>
</html>